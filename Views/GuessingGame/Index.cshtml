<div class="d-flex justify-content-center" id="container">
    <div class="wrapper">
        <form method="post" class="form-horizontal" role="form">
            <h4>Can you guess the number?</h4>


            <div class="form-group">
                <label for="guess" class="control-label"></label>
                <div class="">
                    <input type="number" id="guess" name="guess" class="form-control" autofocus />
                </div>
            </div>

            <div class="form-group">

                <div class="form-row">
                    <div class="col-md-offset-2 ">
                        <input type="submit" name="submitButton" class="btn btn-primary" value="Check" />
                    </div>
                    <div class=" ">
                        <input type="submit" name="submitButton" class="btn btn-primary" value="Reset" />
                    </div>
                </div>
                <h3>@ViewBag.GuessMessage</h3>
            </div>
        </form>
    </div>
</div>
