
@{ 
    ViewData["Title"] = "Fever check";
}

<div class="d-flex justify-content-center" id="container">
    <div class="wrapper">
        <form method="post" class="form-horizontal" role="form">
            <h4>Check if you have a fever:</h4>

           
            <div class="form-group">
                <label for="temperature" class="control-label"></label>
                <div class="">
                    <input id="temperature" name="temperature" class="form-control" required autofocus />
                    
                </div>

            </div>

            <div class="form-group">
                @Html.RadioButton("scale", "celsius", true, new { id = "celsius" })
                @*<input type="radio" id="celsius" name="scale" value="celsius" checked>*@
                <label for="celsius">Celsius</label><br>
                @Html.RadioButton("scale", "fahrenheit", false, new { id="fahrenheit"})
                @*<input type="radio" id="fahrenheit" name="scale" value="fahrenheit">*@
                <label for="fahrenheit">Fahrenheit</label><br>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 ">
                    <input type="submit" class="btn btn-primary" value="Check" />
                </div>
                <h3>@ViewBag.FeverMessage</h3>
            </div>
        </form>
    </div>
</div>

